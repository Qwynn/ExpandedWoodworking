<Defs> 

<!-- Wood Trees -->

	<ThingDef Name="WoodLumberBase" ParentName="ResourceBase" Abstract="True">
		<description>Processed lumber. Mostly useful for building long-lasting, simple structures and furniture.</description>
		<graphicData>
			<texPath>Resources/WoodLumber</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<equippedAngleOffset>-20</equippedAngleOffset>
		<soundInteract>Wood_Drop</soundInteract>
		<soundDrop>Wood_Drop</soundDrop>
		<statBases>
			<MarketValue>1.4</MarketValue>
			<MaxHitPoints>150</MaxHitPoints>
			<Mass>0.4</Mass>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>2</DeteriorationRate>
			<MeleeWeapon_DamageAmount>8</MeleeWeapon_DamageAmount>
			<MeleeWeapon_Cooldown>2.2</MeleeWeapon_Cooldown>
			<SharpDamageMultiplier>0.3</SharpDamageMultiplier>
			<BluntDamageMultiplier>0.8</BluntDamageMultiplier>
		</statBases>
		<thingCategories>
			<li>WoodLumber</li>
		</thingCategories>
		<stuffProps>
			<categories>
				<li>Woody</li>
			</categories>
			<commonality>0.20</commonality> <!-- because there are so many wood types -->
			<appearance>Planks</appearance>
			<statOffsets>
				<Beauty>2</Beauty>
			</statOffsets>
			<statFactors>
				<Beauty>1.25</Beauty>
				<MarketValue>0.2</MarketValue>
				<MaxHitPoints>0.4</MaxHitPoints>
				<Flammability>1</Flammability>
				<WorkToBuild>1.0</WorkToBuild>
				<WorkToMake>1.0</WorkToMake>
				<DoorOpenSpeed>1.2</DoorOpenSpeed>
				<BedRestEffectiveness>0.9</BedRestEffectiveness>
				<MeleeWeapon_Cooldown>0.9</MeleeWeapon_Cooldown>
			</statFactors>
		</stuffProps>
		<isBodyPartOrImplant>true</isBodyPartOrImplant>
		<techHediffsTags>
			<li>Poor</li>
		</techHediffsTags>
	</ThingDef>
  
